@model Entities.ViewModels.ResetPasswordViewModel
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ResetPassword</title>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    @if (ViewBag.status)
    {
        <div class="alert alert-info">Şifreniz güncellenmitşir. Lütfen oluşturmuş olduğunuz şifre ile giriş yapmayı deneyin.</div>
        <a asp-action="Login" asp-controller="Home">Giriş Yap</a>
    }
    else
    {
        <div class="container">
            <h4>Yeni Şifre Oluştur</h4>
            <hr />
            <div class="alert alert-info">Lütfen yeni şifrenizi giriniz.</div>
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="ResetPasswordConfirm" method="post">
                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input type="submit" value="Oluştur" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Login">Geri Dön</a>
            </div>
        </div>

    }
</body>
</html>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

